  },
  "inputNumber": {
      "body": "<InputNumber @bind-Value=\"${1:Model}.${2:Property}\" />$0",
      "prefix": "yInputNumber"
  },
  "inputSelect": {
      "body": ["<InputSelect @bind-Value=\"${1:Model}.${2:Property}\" >$0", "\t<option value=\"\">Select...</option>", "\t<option value=\"${3:YourValue}\">${4:$3}</option>", "</InputSelect>$0"],
      "prefix": "yInputSelect"
  },
  "inputSelectForEach": {
      "body": ["<InputSelect @bind-Value=\"${1:Model}.${2:Property}\" >$0", "\t<option value=\"\">Select...</option>", "\t@foreach (var ${3:item} in ${4:Items})", "{", "\t\t<option value=\"${5:$3}.${6:Id}\">${7:$5}.${8:DisplayProperty}</option>", "\t}", "</InputSelect>$0"],
      "prefix": "yInputSelectForEach"
  },
  "inputText": {
      "body": "<InputText @bind-Value=\"${1:Model}.${2:Property}\" />$0",
      "prefix": "yInputText"
  },
  "inputTextArea": {
