      "body": ["<CascadingAuthenticationState>", "\t$0", "</CascadingAuthenticationState>"],
      "prefix": "yCascadingAuthenticationState"
  },
  "codeBlock": {
      "body": ["@code {", "\t$0", "}"],
      "prefix": "yCode"
  },
  "component": {
      "body": ["@page \"/${1:${TM_FILENAME_BASE}}\"", "", "$0", "", "@code {", "", "}"],
      "prefix": "yComponent"
  },
  "componentChildContent": {
      "body": ["@ChildContent", "", "@code {", "\t[Parameter] public RenderFragment ChildContent { get; set; }", "}"],
