{
  "attribute [Authorize] Directive": {
      "body": "@attribute [Authorize]",
      "prefix": "yAuthorizeAttribute"
  },
  "bindAttribute": {
      "body": "@bind=\"${1:Property}\"",
      "prefix": "yBind"
  },
  "bindFormatAttribute": {
      "body": "@bind:format=\"${1:yyyy-MM-dd}\"",
      "prefix": "yBindFormat"
  },
  "bindOnInputEvent": {
      "body": "@bind=\"${1:Property}\"  @bind:event=\"oninput\"$0",
      "prefix": "yBindOnInputEvent"
  },
